
@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    @Scripts.Render("~/bundles/usuario")
}


<h2>Usuarios</h2>
<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Usuarios</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: listaUsuarios">
                    <li>
                        <span>Nombre : </span><span data-bind="text: nombre"></span>&nbsp;<span data-bind="text: apellido"></span>
                        <small></small>
                        <small><a href="#" data-bind="click: $parent.getUsuarioDetail">Detalles</a></small>
                        <small><a href="#" data-bind="click: $parent.getUsuarioDelete">Eliminar</a></small>
                        <small><a href="#" data-bind="click: $parent.getUsuarioEditar">Editar</a></small>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>

    <!-- ko if:detail() -->
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Detalles</h2>
            </div>
            <table class="table">
                <tr><td>Nombre</td><td data-bind="text: detail().nombre"></td></tr>
                <tr><td>Apellido</td><td data-bind="text: detail().apellido"></td></tr>
                <tr><td>Correo</td><td data-bind="text: detail().correo"></td></tr>
                <tr><td>Telefono</td><td data-bind="text: detail().telefono"></td></tr>
                <tr><td>Rol</td><td data-bind="text: rolDetail().nombre"></td></tr>
            </table>
        </div>
    </div>
    <!-- /ko -->

   
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Agregar Usuario</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addUsuario">

                   

                    <div class="form-group frspace" data-bind="with: newUsuario">
                        <label for="inputnombre" class="col-sm-2 control-label">Nombre</label>

                        <div class="col-sm-10">
                            <input type="text" step="any" class="form-control" id="inputnombre" data-bind="value:nombre" />
                        </div>

                        <label for="inputApellido" class="col-sm-2 control-label">Apellido</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputApellido" data-bind="value:apellido" />
                        </div>

                        <label for="inputDireccion" class="col-sm-2 control-label">Password</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="inputDireccion" data-bind="value:password" />
                        </div>

                        <label for="inputCorreo" class="col-sm-2 control-label">Correo</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" id="inputCorreo" data-bind="value:correo" />
                        </div>

                        <label for="inputTelefono" class="col-sm-2 control-label">Telefono</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" id="inputTelefono" data-bind="value:telefono" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputCategoriaId" class="col-sm-2 control-label">Rol</label>
                        <div class="col-sm-10">
                            <select data-bind="options:listaRols, optionsText: 'nombre', value: newUsuario.RolId.ID"></select>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-default">Enviar</button>
                </form>
            </div>
        </div>
    </div>

    <!-- ko if:upUsuario()-->

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Editar Usuario</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: editUsuario">
                    <div class="form-group frspace">
                        <label for="inputnombre" class="col-sm-2 control-label">Nombre</label>

                        <div class="col-sm-10">
                            <input type="text" step="any" class="form-control" id="inputnombre" data-bind="textinput:upUsuario().nombre" />
                        </div>

                        <label for="inputapellido" class="col-sm-2 control-label">Apellido</label>

                        <div class="col-sm-10">
                            <input type="text" step="any" class="form-control" id="inputapellido" data-bind="textinput:upUsuario().apellido" />
                        </div>

                        <label for="inputDireccion" class="col-sm-2 control-label">Password</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="inputDireccion" data-bind="textinput:upUsuario().password" />
                        </div>

                        <label for="inputCorreo" class="col-sm-2 control-label">Correo</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" id="inputCorreo" data-bind="textinput:upUsuario().correo" />
                        </div>

                        <label for="inputTelefono" class="col-sm-2 control-label">Telefono</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" id="inputTelefono" data-bind="textinput:upUsuario().telefono" />
                        </div>
                    </div>


                    <div class="form-group">
                        <label for="inputCategoriaId" class="col-sm-2 control-label">Rol</label>
                        <div class="col-sm-10">
                            <select data-bind="options:rolPlusOther, optionsText:'nombre', optionsValue:'ID', value:upUsuario().RolId"></select>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-default">Enviar</button>
                </form>
            </div>
        </div>
    </div>

    <!-- /ko -->
</div>