@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_LayoutVentas.cshtml";
}

@section scripts {
    @Scripts.Render("~/bundles/login")
}



<hr />
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <form data-bind="submit: Logear">
                    <h2>Login</h2>
                    <div class="form-group" data-bind="with: usuarioLogear">
                        <label for="exampleInputEmail1">Usuario</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" data-bind="value: NickName" placeholder="Nickname">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" data-bind="value: Password" placeholder="Password">
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
             </div>
        </div>
    </div>



        
    
    

